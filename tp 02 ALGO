#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include"fanction.c"
int main() {
    int size;
    char array[100], reversed[100];
    
    // Test LoadString
    printf("Enter string size: ");
    scanf("%d", &size);
    char *text = LoadString(size);
    
    // Test StringLength
    int len = StringLength(text);
    printf("String length: %d\n", len);
    
    // Test LoadArray
    LoadArray(text, array);
    printf("Array content: %s\n", array);
    
    // Test ReverseArray
    ReverseArray(array, reversed, len);
    printf("Reversed array: %s\n", reversed);
    
    // Test DisplayArray
    printf("Display array: ");
    DisplayArray(array, len);
    
    // Test SumStringASCII
    int sum = SumStringASCII(text);
    printf("ASCII sum: %d\n", sum);
    
    // Test ReverseString
    printf("Before reverse: %s\n", text);
    ReverseString(text, text + len - 1);
    printf("After reverse: %s\n", text);
    
    free(text);
    return 0;
}
